.main__messages
  .main__messages__list
    .main__messages__list__data
      .message_name
        = message.user.name
      .date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main__messages__chat
      - if message.content.present?
        %p.chat
          = message.content
      = image_tag message.image.url, class: 'main__messages__chat__image' if message.image.present?